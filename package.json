{
  "name": "sabs-smart-attendance-biometric-system",
  "version": "1.0.0",
  "description": "SABS - Smart Attendance Biometric System with multi-facility support and comprehensive reporting",
  "main": "server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "nodemon server/server.js",
    "client": "npm start --prefix client",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "install:all": "npm install && cd client && npm install",
    "build": "cd client && npm run build",
    "seed:admin": "node server/seeds/createAdmin.js",
    "seed:leave-policies": "node server/seed-leave-policies.js",
    "seed:employees-week": "node server/seed-employees-week-attendance.js",
    "seed:admins": "node server/seed-admins.js"
  },
  "keywords": [
    "attendance",
    "tracking",
    "mern",
    "analytics"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cron": "^3.0.2",
    "nodemailer": "^7.0.9",
    "pdfkit": "^0.17.2",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  }
}
