# Production Environment Configuration Template
# Copy this file to .env on your production server and update the values

# Server Configuration
PORT=5000
NODE_ENV=production
HOST=0.0.0.0

# Database - Update with your production MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/attendance-tracking

# JWT Secret - CHANGE THIS to a strong random secret in production!
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_IN_PRODUCTION
JWT_EXPIRE=30d

# Java Service Integration - Update with your production Java service URL
JAVA_SERVICE_URL=http://localhost:8081
JAVA_SERVICE_TIMEOUT=30000
JAVA_SERVICE_AUTH_KEY=CHANGE_THIS_IN_PRODUCTION
ENABLE_JAVA_INTEGRATION=true

# Facility Device APIs (Update with your actual device server endpoints)
FACILITY_1_API=http://facility1-server.com/api/attendance
FACILITY_2_API=http://facility2-server.com/api/attendance
FACILITY_3_API=http://facility3-server.com/api/attendance
FACILITY_4_API=http://facility4-server.com/api/attendance
FACILITY_5_API=http://facility5-server.com/api/attendance
FACILITY_6_API=http://facility6-server.com/api/attendance

# Data Sync Interval (in minutes)
SYNC_INTERVAL=60

# CORS Origin - Set to your production frontend URL
CORS_ORIGIN=https://sabs-dashboard.web.app
