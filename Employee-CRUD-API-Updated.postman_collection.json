					"raw": "{\n    \"employeeId\": \"EMP001\",\n    \"name\": \"John Doe\",\n    \"department\": \"IT\",\n    \"position\": \"Developer\",\n    \"faceImageBase64\": \"\",\n    \"deviceKey\": \"020e7096a03c670f63\",\n    \"secret\": \"123456\",\n    \"forceUpdate\": false\n}"
				},
				"url": {
					"raw": "http://localhost:8081/api/employee/register",
