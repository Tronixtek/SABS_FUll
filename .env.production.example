# Digital Ocean Server Environment Configuration
# HTTPS deployment with SSL domain: sabs-backend.hefrias.ng

# Database
MONGODB_URI=mongodb://localhost:27017/sabs_attendance
NODE_ENV=production

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Java Service Integration  
JAVA_SERVICE_URL=http://127.0.0.1:8081
JAVA_SERVICE_TIMEOUT=30000
ENABLE_JAVA_INTEGRATION=true

# CORS Configuration (Add your frontend domain here)
CORS_ORIGIN=https://your-frontend-domain.com,https://sabs-frontend.hefrias.ng,http://localhost:3000

# Security
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
JWT_EXPIRE=7d

# SSL Domain Configuration
DOMAIN_NAME=sabs-backend.hefrias.ng
SSL_ENABLED=true

# Email Service (if using)
EMAIL_FROM=noreply@hefrias.ng
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Device Configuration (Updated for HTTPS)
XO5_WEBHOOK_URL=https://sabs-backend.hefrias.ng/api/xo5/record

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=50mb